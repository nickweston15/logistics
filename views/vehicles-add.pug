extends layout

block main
  form(action="/home/vehicles/add" method="post")
    dl
      dt
        label(for="make") Enter the make:
      dd
        input(type="text", id="make", name="make", placeholder="Honda", required)
      br

      dt
        label(for="model") Enter the model:
      dd
        input(type="text", id="model", name="model", placeholder="McCord", required)
      br

      dt
        label(for="year") Enter the year:
      dd
        input(type="number", id="year", name="year", min="1800", max="2030" placeholder="2025", required)
      br

    button(type="submit" value="Save") Save
      br
    a(href="/home/vehicles") Cancel